<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="App\Domain\Entity\Product" table="product">

        <id name="sku" length="6" column="sku">
            <generator strategy="NONE"/>
        </id>

        <field name="name" length="50" unique="true" />
        <field name="category" length="50" unique="true" />
        <field name="price" type="integer" unique="true" />

    </entity>
</doctrine-mapping>
